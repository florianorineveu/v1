{% extends 'front/base.html.twig' %}

{% block title -%}
    {{ parent() ~ 'NewDeal' }}
{%- endblock title %}

{% block meta -%}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Alnilam ⊡ NewDeal" />
    <meta name="twitter:description" content="NewDeal, solution SASS de gestion RH et paie." />
    <meta name="twitter:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('images/projets/newdeal/newdeal.jpg') }}" />
    <meta name="twitter:site" content="@fnev_eu" />
    <meta name="twitter:domain" content="{{ app.request.host }}">

    <meta property="og:title" content="Alnilam ⊡ NewDeal" />
    <meta property="og:url" content="{{ app.request.schemeAndHttpHost ~ app.request.pathInfo }}" />
    <meta property="og:description" content="NewDeal, solution SASS de gestion RH et paie." />
    <meta property="og:type" content="article" />
    <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('images/projets/newdeal/newdeal.jpg') }}" />
{% endblock meta %}

{% block headerClasses -%}
    {{ parent() ~ ' header-newdeal' }}
{%- endblock headerClasses %}

{% block body %}
    <h1 class="h1">NewDeal</h1>

    <div class="flex">
        <p class="muted left">
            Stack : Symfony, MySQL, jQuery, HTML, CSS<br>
            Développeur back-end dans une équipe de 6 personnes.
        </p>
        <p class="right muted">
            {% if total_commits is not null %}
                Dernière activité : {{ last_activity|date('d/m/Y à H:i') }} -
                Commits : {{ total_commits }}<br>
            {% endif %}
            <a href="https://newdeal.io" target="_blank" rel="nofollow">Site Internet</a>
        </p>
    </div>

    <p>En cours de rédaction.</p>
{% endblock body %}