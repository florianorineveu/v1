<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')|first|default('fr') }}">
<head>
    <meta charset="utf-8">
    <meta name="robots" content="noindex, noarchive, nosnippet, noodp, noimageindex, notranslate, nocache">
    <meta name="viewport" content="width=device width, initial-scale=1">
    <meta name="author" content="Florian 'Ori' Neveu">
    <meta name="generator" content="Lune {{ lune.version }}" />

    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock stylesheets %}

    <title>{% block page_title %}Lune{% endblock %}</title>
</head>
<body class="{% block body_classes %}{% endblock %}">
    {{ include('admin_area/_header.html.twig') }}

    <nav id="sidebarMenu" class="sidebar">
        <div class="logo">
            Lune
        </div>
        {{ include('admin_area/_sidebar.html.twig') }}
    </nav>
    <main class="main-content">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label is not same as ('error') ?: 'danger' }} alert-dismissible fade show" role="alert">
                    <strong>{{ label|capitalize }} !</strong> {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </main>

    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock javascripts %}
</body>
</html>
