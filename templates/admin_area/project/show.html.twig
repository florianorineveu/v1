{% extends 'admin_area/base.html.twig' %}

{% block title %}Project{% endblock %}

{% block content %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ project.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ project.slug }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ project.enabled }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ project.updatedAt ? project.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_project_index') }}">back to list</a>

    <a href="{{ path('admin_project_edit', {'id': project.id}) }}">edit</a>

    {{ include('admin_area/project/_delete_form.html.twig') }}
{% endblock %}
