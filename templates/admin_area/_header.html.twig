<header class="navbar navbar-expand-lg navbar-light navbar-fixed-top">
    <div class="container-fluid">
        <div class="d-flex">
            <ul class="navbar-nav">
                <li class="nav-item d-none d-lg-block">
                    <a id="fullscreenToggler" class="nav-link" href="javascript:">
                        <i class="fas fa-expand fa-lg"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div>
            <div class="collapse d-block">
                <ul class="navbar-nav user-navbar">
                    {% if locales is defined and locales %}
                        <li class="dropdown nav-item mr-3 mr-lg-2">
                            <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownI18nLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {{ app.request.locale }}
                            </a>

                            {% set route = app.request.attributes.get('_route') %}
                            {% set route_params = app.request.attributes.get('_route_params') %}
                            {% set params = route_params|merge(app.request.query.all) %}

                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownI18nLink">
                                {% for locale in locales|split('|') %}
                                    <a class="dropdown-item" href="{{ path(route, params|merge({ _locale: locale })) }}">
                                        <i class="far fa-edit mr-2"></i>
                                        {{ locale }}
                                    </a>
                                {% endfor %}
                                {#<a class="dropdown-item" href="#">
                                    <i class="far fa-edit mr-2"></i>
                                    Français
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-sliders-h mr-2"></i>
                                    English
                                </a>#}
                            </div>
                        </li>
                    {% endif %}
                    <li class="dropdown nav-item mr-1">
                        <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownUserLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ app.user.firstname is defined and app.user.firstname ? (app.user.firstName ~ ' ' ~ app.user.lastName) : app.user.userIdentifier }}
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownUserLink">
                            <a class="dropdown-item" href="#">
                                <i class="far fa-edit mr-2"></i>
                                Mon compte
                            </a>
                            <a class="dropdown-item" href="#">
                                <i class="fas fa-sliders-h mr-2"></i>
                                Préférences
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('admin_security_logout') }}">
                                <i class="fas fa-power-off mr-2"></i>
                                Déconnexion
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
